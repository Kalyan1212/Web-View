{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Attach to Extension Host",
            "type": "extensionHost",
            "request": "attach",
            "port": 9229,
            "outFiles": ["${workspaceFolder}/out/**/*.js"]
        }
    ]
}